{
    "layer": "bottom",
    "position": "top",
    "height": 28,
    "width": 1920,
    "margin": "2, 0, 2, 0",
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "cpu",
        "memory",
        "disk",
        "custom/recorder",
        "custom/audiorec",
        "mpd"
    ],
    "modules-center": [
        "sway/window"
    ],
    "modules-right": [
        "pulseaudio",
        "tray",
        "keyboard-state",
        "backlight",
        "idle_inhibitor",
        "network",
        "clock",
        "custom/power"
    ],
    "sway/workspaces": {
        "sort-by-number": true
    },
    "custom/launcher": {
        "format": "Nix",
        "on-click": "rofi -show run",
        "tooltip": false
    },
    "sway/window": {
        "format": "{title}",
        "max-length": 50,
        "rewrite": {
            "(.*) - Microsoft Edge": "üåé $1",
            "(.*) - vim": "ÓüÖ $1",
            "(.*) - zsh": "ÔÑ† [$1]",
            "(.*) - (.*) - Visual Studio Code": "ÔÑ° [$2]$1"
        }
    },
    "clock": {
        "interval": 1,
        "locale": "C",
        "format": "{:%I:%M %p}",
        "format-alt": "ÔÅ≥ {:%a,%b %d}"
    },
    "cpu": {
        "interval": 10,
        "format": "Ôãõ {usage}%",
        "max-length": 10,
        "on-click": "alacritty -e btm"
    },
    "memory": {
        "interval": 30,
        "format": "ÔÉâ {used:0.2f}GB",
        "max-length": 10,
        "tooltip": false,
        "warning": 70,
        "critical": 90
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "‚ö° {capacity}%",
        "format-plugged": "Ôá¶  {capacity}%",
        "format-icons": [
            "ÔâÑ",
            "ÔâÉ",
            "ÔâÇ",
            "ÔâÅ",
            "ÔâÄ"
        ]
    },
    "temperature": {
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞ Ôãá",
        "format": "{temperatureC}¬∞ Ôãâ"
    },
    "network": {
        "interval": 1,
        "format": "{icon}",
        "format-alt": "{ipaddr}/{cidr} {icon}",
        "format-alt-click": "click-right",
        "format-wifi": "{icon} {signalStrength}%",
        "format-icons": {
            "wifi": [
                "Ô™©",
                "Ô™®",
                "Ôá´"
            ],
            "ethernet": [
                "Ôõø"
            ],
            "disconnected": [
                "Ôôö"
            ]
        },
        "on-click": "alacritty -e nmtui",
        "tooltip-format": "{ifname}: {ipaddr}  {bandwidthTotalBytes}"
    },
    "pulseaudio": {
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": "{icon}Ôäî {volume}% {format_source}",
        "format-bluetooth-muted": "Ôë¶ {format_source}",
        "format-muted": "Ôë¶  {format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "üéß",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": [
            "‚òÄÔ∏è",
            "ÔÜÖ"
        ],
        "on-scroll-down": "brightnessctl -c backlight set 1%-",
        "on-scroll-up": "brightnessctl -c backlight set +1%"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ ON",
            "deactivated": "ÔÅ∞ OFF"
        }
    },
    "tray": {
        "icon-size": 16
    },
    "disk": {
        "format": "ÔÇ† {free}",
        "path": "/nix/store"
    },
    "custom/recorder": {
        "format": "ÔÄΩ Rec",
        "format-disabled": "ÔÄΩ Off-air",
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"recording\"}'",
        "exec-if": "pgrep wf-recorder"
    },
    "custom/audiorec": {
        "format": "‚ô¨ Rec",
        "format-disabled": "‚ô¨ Off-air",
        "return-type": "json",
        "interval": 1,
        "exec": "echo '{\"class\": \"audio recording\"}'",
        "exec-if": "pgrep ffmpeg"
    },
    "mpd": {
        "format": "{stateIcon} {artist} - {title}",
        "format-disconnected": "üé∂",
        "format-stopped": "‚ô™",
        "interval": 10,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)",
        "max-length": 45
    },
    "custom/power": {
        "format": "‚èª PWR",
        "on-click": "",
        "tooltip": false
    },
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": {
            "numlock": "[{icon} NUM]",
            "capslock": "[{icon} CAP]"
        },
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    }
}